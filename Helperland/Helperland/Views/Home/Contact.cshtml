    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />

     <script src="~/js/site.js"></script>

</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-lg smlNav" id="nav">
