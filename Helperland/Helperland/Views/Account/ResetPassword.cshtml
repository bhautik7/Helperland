@model UserRegistrationViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_PublicPageLayout.cshtml";
}
  
@section Styles
{
    <style>
        .form-group{
            margin-bottom: 20px;
            margin-top: 0px;
            max-width: 400px;
        }
        .form-wrapper{
            margin:auto;
            max-width:440px;
            padding: 20px 20px;
        }
        .save-btn {
            background-color: #1d7a8c;
            border: none;
            color: #fff;
            border-radius: 40px;
            padding: 8px 20px;
        }
    </style>
}
<section class="pt-5">
    <div class="col-sm-12 mt-4 mb-5 mt-5 text-center">
        <h2>Reset Your Password</h2>
        <figure>
            <img src="~/images/separator.png">
        </figure>
    </div>

    <div class="row">
        <div class="form-wrapper">
            <form method="post">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="ExpireTime" />*@
                
                <div class="form-group">
                    <label>New Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                </div>
                <div class="col-sm-12 mt-3 mb-3">
                    <div asp-validation-summary="All" class="text-danger text-start"></div>
                </div>
                <div class="form-group">
                    <Button type="submit" class="save-btn">Save</Button>
                </div>
            </form>
        </div>
    </div>
</section>