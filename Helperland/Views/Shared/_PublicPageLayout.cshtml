                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Account" asp-action="BecomeAPro">
                            <button type="button" class="navbar-button btn btn-outline-light">Become a Helper</button>
                        </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Account" asp-action="Login" data-bs-toggle="modal" data-bs-target="#loginModal"
                        data-bs-dismiss="modal">
                            <button type="button" class="navbar-button btn btn-outline-light">Login</button>
                        </a>
                    </li>
                      
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Account" asp-action="BecomeAPro">
                            <button type="button" class="navbar-button btn btn-outline-light">Become a Helper</button>
                        </a>
                    </li>
                    }
